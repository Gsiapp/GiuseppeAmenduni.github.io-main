@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Accedi";
}

<div class="login-page">
    <div class="login-container">
        <div class="login-header">
            <h1 class="display-4 fw-bold text-primary mb-2">ECOMMERCE</h1>
            <h2 class="h4 mb-4">Benvenuto</h2>
            <p>Accedi al tuo account per continuare</p>
        </div>

        <form method="post" asp-controller="Account" asp-action="Login" class="login-form">
            @Html.AntiForgeryToken()

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    <div>
                        <strong>Errore di accesso</strong>
                        <p>@ViewBag.Error</p>
                    </div>
                </div>
            }

            <div class="form-group">
                <label for="username">Username o e-mail</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>

            <button type="submit" class="btn btn-login">
                <i class="fas fa-sign-in-alt me-2"></i>
                Accedi
            </button>
        </form>

        <div class="login-footer">
            <p>Non hai un account?</p>
            <a href="@Url.Action("Register", "Account")">
                <i class="fas fa-user-plus me-1"></i>
                Registrati
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }
    .card {
        border-radius: 15px;
        backdrop-filter: blur(10px);
    }
    .form-control {
        border-radius: 10px;
        padding: 0.8rem 1rem;
    }
    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
    }
    .btn-primary {
        border-radius: 10px;
        padding: 0.8rem;
        font-weight: 500;
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        transition: transform 0.2s;
    }
    .display-4 {
        color: #0d6efd;
        letter-spacing: 1px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
