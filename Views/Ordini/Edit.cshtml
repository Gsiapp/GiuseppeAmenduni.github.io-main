@model GestioneOrdini.Models.Ordine

@{
    ViewData["Title"] = "Modifica Ordine";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Modifica Ordine</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="DataOrdine" class="form-label fw-bold"></label>
                            <input asp-for="DataOrdine" class="form-control" type="date" />
                            <span asp-validation-for="DataOrdine" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Totale" class="form-label fw-bold"></label>
                            <input asp-for="Totale" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Totale" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Stato" class="form-label fw-bold"></label>
                            <select asp-for="Stato" class="form-control">
                                <option value="">Seleziona uno stato</option>
                                <option value="In attesa">In attesa</option>
                                <option value="In elaborazione">In elaborazione</option>
                                <option value="Completato">Completato</option>
                                <option value="Annullato">Annullato</option>
                            </select>
                            <span asp-validation-for="Stato" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ClienteId" class="form-label fw-bold"></label>
                            <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.Clienti">
                                <option value="">Seleziona un cliente</option>
                            </select>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary">&#8592; Torna alla Lista</a>
                    <button type="submit" class="btn btn-success">&#10004; Salva</button>
                </div>
            </form>
        </div>
    </div>
</div>