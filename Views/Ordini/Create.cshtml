@model GestioneOrdini.Models.Ordine

@{
    ViewData["Title"] = "Crea Ordine";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Crea Nuovo Ordine
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DataOrdine" class="form-label fw-semibold">Data Ordine</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-calendar-alt"></i>
                                    </span>
                                    <input asp-for="DataOrdine" class="form-control" type="date" /> 
                                </div>
                                <span asp-validation-for="DataOrdine" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Totale" class="form-label fw-semibold">Totale (â‚¬)</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-euro-sign"></i>
                                    </span>
                                    <input asp-for="Totale" class="form-control" type="number" step="0.01" /> 
                                </div>
                                <span asp-validation-for="Totale" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stato" class="form-label fw-semibold">Stato Ordine</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-tasks"></i>
                                </span>
                                <select asp-for="Stato" class="form-select">
                                    <option value="">Seleziona uno stato...</option>
                                    <option value="In attesa">In attesa</option>
                                    <option value="In elaborazione">In elaborazione</option>
                                    <option value="Completato">Completato</option>
                                    <option value="Annullato">Annullato</option>
                                </select>
                            </div>
                            <span asp-validation-for="Stato" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ClienteId" class="form-label fw-semibold">Cliente</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                                <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.Clienti">
                                    <option value="">Seleziona un cliente...</option> 
                                </select>
                            </div>
                            <span asp-validation-for="ClienteId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Torna alla Lista
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Crea Ordine
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>