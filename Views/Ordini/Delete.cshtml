@model GestioneOrdini.Models.Ordine

@{
    ViewData["Title"] = "Elimina Ordine";
}

<h1>Elimina Ordine</h1>

<h3>Sei sicuro di voler eliminare questo ordine?</h3>
<div>
    <h4>Ordine</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Data Ordine</dt>
        <dd class="col-sm-10">@Model.DataOrdine.ToShortDateString()</dd>
        <dt class="col-sm-2">Totale</dt>
        <dd class="col-sm-10">@Model.Totale.ToString("C")</dd>
        <dt class="col-sm-2">Stato</dt>
        <dd class="col-sm-10">@Model.Stato</dd>
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente.Nome @Model.Cliente.Cognome</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" /> |
        <a asp-action="Index">Torna alla Lista</a>
    </form>
</div>