@model GestioneOrdini.Models.Cliente

@{
    ViewData["Title"] = "Aggiungi Cliente";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>Aggiungi Nuovo Cliente
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nome" class="form-label fw-semibold">Nome</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input asp-for="Nome" class="form-control" placeholder="Inserisci il nome" />
                                </div>
                                <span asp-validation-for="Nome" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Cognome" class="form-label fw-semibold">Cognome</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input asp-for="Cognome" class="form-control" placeholder="Inserisci il cognome" />
                                </div>
                                <span asp-validation-for="Cognome" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Email</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input asp-for="Email" class="form-control" placeholder="esempio@email.com" type="email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefono" class="form-label fw-semibold">Telefono</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-phone"></i>
                                </span>
                                <input asp-for="Telefono" class="form-control" placeholder="Inserisci il numero di telefono" />
                            </div>
                            <span asp-validation-for="Telefono" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Indirizzo" class="form-label fw-semibold">Indirizzo</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-home"></i>
                                </span>
                                <input asp-for="Indirizzo" class="form-control" placeholder="Inserisci l'indirizzo completo" />
                            </div>
                            <span asp-validation-for="Indirizzo" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Torna alla Lista
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Salva Cliente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>