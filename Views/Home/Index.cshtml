@{
    ViewData["Title"] = "Home Page";
}

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand" href="#">
            <i class="fas fa-store me-2 text-primary"></i>Ecommerce Admin
        </a>
        
        
    </div>
</nav>

<!-- Contenuto Principale -->
<div class="container">
    <div class="text-center mt-5">
        <h1 class="display-4">Ecommerce</h1>
        <p class="lead">Pagina Gestione</p>
    </div>

    <!-- Riquadri -->
    <div class="row mt-5">
        <!-- Card Gestione Ordini -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-tasks fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Gestione Ordini</h5>
                    <p class="card-text">Gestisci e monitora tutti gli ordini</p>
                    <a href="@Url.Action("Index", "Ordini")" class="btn btn-primary">Vai agli Ordini</a>
                </div>
            </div>
        </div>

        <!-- Card Area Clienti -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-3 text-success"></i>
                    <h5 class="card-title">Area Clienti</h5>
                    <p class="card-text">Gestisci i dati dei clienti</p>
                    <a href="@Url.Action("Index", "Clienti")" class="btn btn-success">Vai ai Clienti</a>
                </div>
            </div>
        </div>

        <!-- Card Visita Store -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-store fa-3x mb-3 text-warning"></i>
                    <h5 class="card-title">Visita lo Store</h5>
                    <p class="card-text">Esplora il catalogo prodotti</p>
                    <a href="@Url.Action("Index", "Store")" class="btn btn-warning">Vai allo Store</a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Footer con Social Media -->
<footer class="bg-light py-4 mt-5">
    <div class="container text-center">
        <div class="d-flex justify-content-center gap-3">
            <a href="https://facebook.com/tuapagina" target="_blank" class="text-decoration-none">
                <i class="fab fa-facebook fa-2x text-primary"></i>
            </a>
            <a href="https://instagram.com/tuoprofilo" target="_blank" class="text-decoration-none">
                <i class="fab fa-instagram fa-2x" style="color: #E1306C;"></i>
            </a>
        </div>
        <p class="mt-3 mb-0 text-muted">&copy; 2025 Il Tuo Ecommerce. Tutti i diritti riservati.</p>
    </div>
</footer>

<!-- Login -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="form-group mb-3">
                        <label for="usernameOrEmail">Username o Email</label>
                        <input type="text" class="form-control" id="usernameOrEmail" name="usernameOrEmail" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-danger">Accedi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">