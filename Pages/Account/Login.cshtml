@page
@model GestioneOrdini.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Accedi";
}

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Gestione Ordini</title>
    <!-- Bootstrap CSS (CDN) -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" 
          integrity="sha384-MecoK0c4J9snAin5BcxjSp4ha4a6MfnUBDgDfhb0GzdIL7OXB5HR4c0lC0mHf4sR" crossorigin="anonymous">
    <!-- Google Font per il logo (facoltativo) -->
    <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #fafafa;
        }
        .login-card {
            border: 1px solid #dbdbdb;
            padding: 40px;
            background-color: #fff;
            border-radius: 1px;
            max-width: 350px;
            width: 100%;
            margin: auto;
        }
        .login-logo {
            font-family: 'Lobster', cursive;
            font-size: 2.5rem;
            margin-bottom: 20px;
            text-align: center;
            color: #262626;
        }
        .form-control {
            background-color: #fafafa;
            border: 1px solid #dbdbdb;
            border-radius: 3px;
            box-shadow: none;
        }
        .btn-login {
            background-color: #3897f0;
            border-color: #3897f0;
            color: #fff;
            font-weight: bold;
        }
        .btn-login:hover {
            background-color: #318ce7;
        }
        .forgot-password {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="login-card">
                <div class="login-logo">
                    Ecommerce
                </div>
                <form method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Username" class="form-control" placeholder="Telefono, email o username" autofocus />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-login btn-block">Accedi</button>
                </form>
                <div class="mt-3 text-center">
                    <a href="#" class="forgot-password text-secondary">Password dimenticata?</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS e dipendenze (CDN) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" 
            integrity="sha384-DfXd/8ksm0L1t1gSrd2ixd6lNl0RjX0x6+J5S0T7vUO6zbRnR8wOmpK28H3zkfRZ" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-LtrjvnR4/Jds4Q6F2NMWjzPxaIepTr7Q0MjEa7BZd2zw41WcNsSf7pPSs05oTzkV" crossorigin="anonymous"></script>
</body>
</html>
